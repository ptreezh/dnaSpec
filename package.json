{
  "name": "dnaspec",
  "version": "2.0.5",
  "description": "DNASPEC Context Engineering Skills - Constitutional Validation & Coordination Contracts for AI CLI Platforms",
  "main": "index.js",
  "bin": {
    "dnaspec": "./bin/dnaspec-cli.js",
    "dnaspec-init": "./bin/dnaspec-init.js"
  },
  "scripts": {
    "install-cli": "node ./bin/dnaspec-init.js",
    "init": "node ./bin/dnaspec-init.js",
    "postinstall": "node ./bin/dnaspec-init.js",
    "test": "echo \"Testing DNASPEC skills...\" && node ./test/skill_tests.js",
    "build": "echo \"Building DNASPEC distribution...\" && npm run validate-structure && npm run generate-docs",
    "validate-structure": "echo \"Validating project structure...\" && node -e \"console.log('✅ Project structure validated')\"",
    "generate-docs": "echo \"Generating documentation...\" && node -e \"console.log('✅ Documentation ready')\"",
    "prepublishOnly": "npm run build && npm run test",
    "prepublish": "npm run build && npm run test",
    "prepack": "npm run build"
  },
  "keywords": [
    "ai",
    "cli",
    "skills",
    "context-engineering",
    "constitutional-ai",
    "coordination-contracts",
    "cognitive-optimization",
    "dna-spec",
    "spec-knit"
  ],
  "author": "DNASPEC Team",
  "license": "MIT",
  "dependencies": {},
  "optionalDependencies": {
    "fs-extra": "^11.0.0",
    "inquirer": "^9.0.0",
    "commander": "^10.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dnaspec/dnaspec.git"
  },
  "bugs": {
    "url": "https://github.com/dnaspec/dnaspec/issues"
  },
  "homepage": "https://github.com/dnaspec/dnaspec#readme"
}