{
  "skill_config": {
    "name": "dnaspec-modulizer",
    "version": "1.0.0",
    "description": "模块成熟化核验器",
    "llm_config": {
      "provider": "ollama",
      "model": "llama3:latest",
      "temperature": 0.1,
      "max_tokens": 4096
    },
    "resource_allocation": {
      "cpu_limit": "1.0",
      "memory_limit": "2GB",
      "api_quota_per_hour": 150
    }
  },
  "modularization_config": {
    "check_levels": ["component", "module", "subsystem", "system"],
    "maturity_criteria": {
      "test_coverage": 0.8,
      "performance_benchmark": "passed",
      "security_audit": "passed",
      "code_quality": "A",
      "documentation": "complete"
    },
    "encapsulation_rules": {
      "immutable_after_sealing": true,
      "explicit_refactor_required": true,
      "dependency_isolation": true,
      "version_control": true
    }
  },
  "analysis_config": {
    "bottom_up_check": true,
    "dependency_analysis": true,
    "impact_assessment": true,
    "risk_evaluation": true
  }
}